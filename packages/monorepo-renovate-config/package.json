{
  "name": "@monorepojs/renovate-config",
  "version": "0.1.1",
  "description": "Preset monorepojs config for Renovate",
  "repository": "monorepojs/monorepojs",
  "homepage": "https://github.com/monorepojs/monorepojs/tree/master/packages/monorepo-renovate-config",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "bugs": {
    "url": "https://github.com/monorepojs/monorepojs/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "description": "Group packages from MonorepoJS monorepo together",
      "packageRules": [
        {
          "groupName": "MonorepoJS monorepo",
          "packagePatterns": [
            "^@monorepojs/"
          ]
        }
      ]
    }
  }
}
